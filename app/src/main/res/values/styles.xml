<resources>

    <style name="textDefault">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="textTitle">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="textSmall">
<!--        <item name="android:fontFamily">@font/transformers_font</item>-->
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="textMedium">
<!--        <item name="android:fontFamily">@font/transformers_font</item>-->
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="textMediumBold" parent="textMedium">
        <item name="android:textStyle">bold</item>
    </style>



    <style name="transformerButton" parent="textSmall">
        <item name="android:background">@drawable/transformer_button_background</item>
        <item name="android:drawableTop">@drawable/ic_add</item>
        <item name="android:layout_margin">@dimen/small_padding</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:padding">5dp</item>
    </style>

    <style name="battleButton" parent="textSmall">
        <item name="android:background">@drawable/battle_button_background</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:padding">5dp</item>
    </style>

</resources>
